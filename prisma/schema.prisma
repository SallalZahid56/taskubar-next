generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------
// Models
// -------------------------------

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  password     String
  role         Role     @default(USER)
  referralCode String?  @unique // âœ… userâ€™s unique referral code
  referredById String? // âœ… who referred them
  referredBy   User?    @relation("Referrals", fields: [referredById], references: [id])
  referrals    User[]   @relation("Referrals")
  wallet       Float    @default(0) // âœ… credits earned through referrals
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  requests      ServiceRequest[]
  notifications Notification[]

  // âœ… Add both sides of referral rewards
  referrerRewards ReferralReward[] @relation("ReferrerRewards")
  refereeRewards  ReferralReward[] @relation("RefereeRewards")
}

model ServiceRequest {
  id          String  @id @default(uuid())
  task        String
  service     String
  topic       String
  description String
  timeline    String
  fileUrl     String?
  status      String  @default("Pending")

  quotation   String?
  voucherCode String? // âœ… actual voucher string user applied
  discount    Float? // âœ… discount value applied
  invoiceSent Boolean @default(false)

  // Relations
  voucherId String?
  voucher   Voucher? @relation(fields: [voucherId], references: [id])
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Voucher {
  id            String    @id @default(uuid())
  name          String
  code          String    @unique
  discount      Float
  type          String    @default("PERCENT") // "PERCENT" or "FLAT"
  appliesTo     VoucherFor @default(REFEREE)  // ðŸ‘ˆ new enum field (who gets it)
  condition     String?   // e.g., "3-projects-same-category" or "5-projects-same-category"
  expiresAt     DateTime?
  createdAt     DateTime  @default(now())

  // Relations
  serviceRequests ServiceRequest[]
}


model Notification {
  id        String   @id @default(uuid())
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
}

model ReferralReward {
  id         String   @id @default(uuid())
  referrerId String
  refereeId  String
  amount     Float
  status     String   @default("PENDING") // or REDEEMED
  createdAt  DateTime @default(now())

  // âœ… Relations
  referrer User @relation("ReferrerRewards", fields: [referrerId], references: [id])
  referee  User @relation("RefereeRewards", fields: [refereeId], references: [id])
}

model AppSetting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


// -------------------------------
// Enums
// -------------------------------

enum Role {
  USER
  ADMIN
}


enum VoucherFor {
  REFERRER
  REFEREE
  MILESTONE3
  MILESTONE5
}
